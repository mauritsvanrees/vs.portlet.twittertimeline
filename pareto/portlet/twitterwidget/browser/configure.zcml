<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    xmlns:i18n="http://namespaces.zope.org/i18n"
    i18n_domain="pareto.portlet.twitterwidget">

  <browser:resource
    file="jquery.twitter.js"
    name="jquery.twitter.js"
    />

  <browser:page
    name="twitterwidget"
    for="*"
    class=".twitterwidget.twitterwidgetView"
    permission="zope2.View"
    allowed_attributes="isAssigned"
    />

</configure>
